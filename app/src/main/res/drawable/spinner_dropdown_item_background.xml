        <shape android:shape="rectangle">
            <solid android:color="#404040" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#505050" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#383838" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2A2A2A" />
        </shape>
    </item>
</selector>