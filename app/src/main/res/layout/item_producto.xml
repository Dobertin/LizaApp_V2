<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2d2d2d"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivProducto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            tools:src="@drawable/ic_producto_placeholder" />

        <!-- Nombre del producto (clickeable) -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:text="Perfume Elegance" />

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textColor="#cccccc"
                android:textSize="12sp"
                tools:text="Perfumes" />

            <TextView
                android:id="@+id/tvMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:textColor="#cccccc"
                android:textSize="12sp"
                tools:text="AVON" />

            <TextView
                android:id="@+id/tvGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Género"
                android:textColor="#cccccc"
                android:textSize="12sp"
                tools:text="Mujer" />

        </LinearLayout>

        <!-- Familia olfativa y capacidad (pueden ser nulos) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/labelFamiliaOlfativa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Familia: "
                    android:textColor="#aaaaaa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvFamiliaOlfativa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Floral"
                    android:textColor="#cccccc"
                    android:textSize="11sp"
                    tools:text="Floral" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/labelCapacidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacidad: "
                    android:textColor="#aaaaaa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvCapacidad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50 ml"
                    android:textColor="#cccccc"
                    android:textSize="11sp"
                    tools:text="50 ml" />

            </LinearLayout>

        </LinearLayout>

        <!-- Precios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catálogo"
                    android:textColor="#888888"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvPrecioCatalogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 100.25"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    tools:text="S/. 100.25" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venta"
                    android:textColor="@color/precio_venta"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvPrecioVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 80.00"
                    android:textColor="@color/precio_venta"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="S/. 80.00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Stock y botón -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stock: 100"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="Stock: 100" />

            <Button
                android:id="@+id/btnAgregarCarrito"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Agregar"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:backgroundTint="@color/accent_color"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:cornerRadius="18dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>