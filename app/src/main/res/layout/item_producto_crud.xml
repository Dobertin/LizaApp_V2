<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewProducto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/ivProductoImagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_producto_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Primera fila: Nombre y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNombreProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perfume X"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <Switch
                    android:id="@+id/switchEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:theme="@style/SwitchTheme" />

            </LinearLayout>

            <!-- Segunda fila: Categoría y marca -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvCategoriaProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perfumes"
                    android:textColor="@color/accent_blue"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMarcaProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AVON"
                    android:textColor="@color/accent_orange"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Tercera fila: Descripción -->
            <TextView
                android:id="@+id/tvDescripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Fragancia floral para mujer"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Cuarta fila: Detalles adicionales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvGeneroProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Género: Mujer"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvCapacidadProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capacidad: 50ml"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Quinta fila: Familia olfativa -->
            <TextView
                android:id="@+id/tvFamiliaOlfativa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Familia: Floral"
                android:textColor="@color/text_tertiary"
                android:textSize="10sp" />

            <!-- Sexta fila: Precios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvPrecioCatalogo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Catálogo: S/. 100.25"
                    android:textColor="@color/precio_catalogo"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrecioVenta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Venta: S/. 80.00"
                    android:textColor="@color/precio_venta"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Séptima fila: Stock y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStockProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stock: 100"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/viewEstadoStock"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/circle_shape" />

                <TextView
                    android:id="@+id/tvEstadoStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISPONIBLE"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Octava fila: Fecha y botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvFechaCreacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Creado: 07/08/2025"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp" />

                <!-- Botones de acción -->
                <ImageButton
                    android:id="@+id/btnEditarProducto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/button_round_primary"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Editar producto"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnEliminarProducto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_round_danger"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Eliminar producto"
                    app:tint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>