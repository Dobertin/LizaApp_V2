<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1E1E"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Información actual del pedido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMACIÓN ACTUAL"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#2A2A2A"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvClienteNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cliente: Juan Pérez"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: S/.168.00"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvAbonadoActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abonado: S/.100.00"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPendiente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pendiente: S/.68.00"
                    android:textColor="#FF5722"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lista de productos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRODUCTOS DEL PEDIDO"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductosPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:maxHeight="200dp" />

        <!-- Nuevo abono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR ABONO"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNuevoAbono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monto del abono"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• El abono se sumará al monto ya abonado\n• Si el abono total iguala el total del pedido, se convertirá automáticamente en venta\n• Puedes eliminar productos si hay más de uno"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>